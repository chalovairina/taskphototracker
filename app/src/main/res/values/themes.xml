<resources>
    <!-- Base application theme. -->
    <style name="Theme.TODOApp" parent="NoActionBarStyle">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status and Action bar colors. -->
  <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="actionModeBackground">@color/actionModeActionBarColor</item>
        <item name="colorControlNormal">@color/white</item>
 <!-- Customize your theme here. -->
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set a specific background color -->
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <!-- Set an icon and it will be shown in the center of screen -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_screen_with_title</item>
        <!-- Set the theme of the Activity that follows the splash screen -->
        <item name="postSplashScreenTheme">@style/Theme.TODOApp</item>
    </style>
    
    <style name="NoActionBarStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

    <style name="Theme.TODOApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TODOApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>