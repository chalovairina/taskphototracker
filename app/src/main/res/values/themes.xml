<resources>
    <!-- Base application theme. -->
    <style name="Theme.TODOApp" parent="NoActionBarStyle">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- Action mode colors. -->
        <item name="colorActionBarBackground">@color/actionBarBackgroundColor</item>
        <item name="actionModeBackground">@color/actionModeActionBarColor</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorActionModeStatusBar">@color/actionModeStatusBarColor</item>

        <!--  UI elements colors      -->
        <item name="colorPlaceholderBackground">@color/placeholderColor</item>
        <item name="colorListBackground">@color/listBackgroundColor</item>
        <item name="colorBackgroundNormal">@color/colorBackgroundNormal</item>
        <item name="colorCircleImageBorder">@color/colorCircleImageBorder</item>
        <item name="colorTextNormal">@color/colorTextNormal</item>
        <item name="colorTextNormalLight">@color/colorTextNormalLight</item>
        <item name="colorTextContrast">@color/colorTextContrast</item>
        <item name="colorItemBackground">@color/cardBackgroundColor</item>
        <item name="colorItemStroke">@color/itemStrokeColor</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set a specific background color -->
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <!-- Set an icon and it will be shown in the center of screen -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_screen_with_title</item>
        <!-- Set the theme of the Activity that follows the splash screen -->
        <item name="postSplashScreenTheme">@style/Theme.TODOApp</item>
    </style>

    <style name="SplashScreenStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_splash_screen_with_title</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="NoActionBarStyle" parent="Theme.Material3.DayNight.NoActionBar" />

    <style name="Theme.TODOApp.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />

    <style name="Theme.TODOApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>